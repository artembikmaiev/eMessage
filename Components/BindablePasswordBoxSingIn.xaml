<UserControl x:Class="єMessage.Components.BindablePasswordBoxSingIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:єMessage.Components"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300">
    <Grid>
        <PasswordBox x:Name="passwordBox" PasswordChanged="PasswordBox_PasswordChanged" Style="{StaticResource textBox}"/>
        <TextBlock x:Name="textPassword" Text="Password" Style="{StaticResource textHint}" 
               Margin="10,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False" />
    </Grid>
</UserControl>
